if [ ! $1 ]
then
  project_name=$1
else
  project_name=${PWD##*/}
fi
export CARGO_INCREMENTAL=0
export RUSTFLAGS="-Zprofile -Ccodegen-units=1 -Cinline-threshold=0 -Clink-dead-code -Coverflow-checks=off -Zno-landing-pads"
cargo build
cargo test
mkdir ccov
zip -0 ccov/ccov.zip `find . \( -name "$project_name*.gc*" \) -print`
grcov ccov/ccov.zip -s . -t html --llvm --branch --ignore-not-existing --ignore "/*" -o ccov
genhtml -o ccov/ --show-details --highlight --ignore-errors source --legend ccov/lcov.info
open ccov/index.html
unset CARGO_INCREMENTAL
unset RUSTFLAGS
